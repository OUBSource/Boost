{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "command": "./build.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "docker",
                    "fileLocation": "relative",
                    "pattern": {
                        "regexp": "^(ERROR|WARNING):\\s*(.+)$",
                        "severity": 1,
                        "message": 2
                    }
                },
                {
                    "owner": "shell",
                    "fileLocation": "relative",
                    "pattern": {
                        "regexp": "^ERROR:\\s*(.+)$",
                        "severity": 1,
                        "message": 1
                    }
                }
            ]
        }
    ]
}